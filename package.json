{
  "name": "jasnan.xyz",
  "version": "2.0.0",
  "description": "Jasnan's personal website running on Next.js",
  "author": "Jasnan Thachaparamban",
  "private": true,
  "scripts": {
    "start": "cross-env SOCKET=true node ./scripts/next-remote-watch.js ./data",
    "dev": "next dev",
    "build": "next build && node ./scripts/generate-sitemap.mjs",
    "serve": "next start",
    "analyze": "cross-env ANALYZE=true next build",
    "lint": "next lint --fix --dir pages --dir components --dir lib --dir layouts --dir scripts",
    "prepare": "husky install",
    "compose": "node ./scripts/compose.mjs"
  },
  "dependencies": {
    "@giscus/react": "2.2.0",
    "@tailwindcss/typography": "0.5.7",
    "autoprefixer": "10.4.12",
    "esbuild": "0.15.12",
    "github-slugger": "1.4.0",
    "gray-matter": "4.0.3",
    "image-size": "1.0.2",
    "mdx-bundler": "9.0.1",
    "next": "12.1.6",
    "next-themes": "0.2.1",
    "postcss": "8.4.18",
    "preact": "10.11.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "reading-time": "1.5.0",
    "rehype-autolink-headings": "6.1.1",
    "rehype-citation": "0.4.0",
    "rehype-katex": "6.0.2",
    "rehype-prism-plus": "1.5.0",
    "rehype-slug": "5.0.1",
    "remark-gfm": "3.0.1",
    "remark-math": "5.1.1",
    "sharp": "0.31.1",
    "tailwindcss": "3.1.8",
    "unist-util-visit": "4.1.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "12.3.1",
    "@svgr/webpack": "6.5.0",
    "@tailwindcss/forms": "0.5.3",
    "cross-env": "7.0.3",
    "dedent": "0.7.0",
    "eslint": "8.28.0",
    "eslint-config-next": "12.3.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jsx-a11y": "6.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "file-loader": "6.2.0",
    "globby": "13.1.2",
    "husky": "8.0.3",
    "inquirer": "9.1.4",
    "lint-staged": "13.0.3",
    "next-remote-watch": "2.0.0",
    "prettier": "2.7.1",
    "socket.io": "4.5.3",
    "socket.io-client": "4.5.3"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "prettier --write"
    ]
  }
}
